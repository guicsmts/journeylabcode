# exibe servicos existentes
systemctl -t service

# copiar arquivo sftp
sftp -h   # solicita help do comando
sftp login@192.168.0.0 # conecta host remoto sftp
get nome_arquivo.txt


# lvm criar sistemas de arquivos 
PV - PSYCAL VOLUME LVM - Hard disk fisico
VG - VOLUME GROUPS
LV - LOGICAL VOLUME
fdisk -l # lista sistema de arquivos
/dev/sda
/dev/sd*
fdisk /dev/sdb
pvcreate # cria um disco fisico
pvdisplay # lista todos os volumes criados
pvs # lista resumida dos discos fisicos
pvremove /dev/sdb # remove um volume fisico

vgcreate dados-nome-volume /dev/sdb
vgdisplay # verifica todos os volumes grups


lvcreate -L 30G -n nome-volume-logico dados-nome-volume
lvdisplay 

# redes redhat 
ipcalc # calculo de subrede
mncli # gerencia networking
nmtui # gerencia networking através do terminal

